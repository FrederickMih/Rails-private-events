<p id="notice"><%= notice %></p>

<table>
  <tbody>
    <h2>Upcoming events</h2>
    <% @event.upcoming.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.creator.username %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Enroll Now!', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<table>
  <tbody>
    <h2>Past Events</h2>
    <% @event.past.each do |event| %>
      <tr class="test1">
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.username%></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

